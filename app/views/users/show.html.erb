<h4>
  by <%= @user.trace_id %>
</h4>
<% if user_signed_in? %>
<%= form_for(@memo, class: 'form-horizontal', role:'form') do |f| %>
<%= f.text_area :content, class: 'memo' %>
<br>
<%= f.submit "Memo!!", class: 'btn btn-default', data: {disable_with: '作成中'} %>
<% end %>
<% end %>

<% @user.memos.each do |memo| %>
<div>
  <h4><a href="/memo/<%= memo.trace_id %>">■</a></h4>
  <pre><%= memo.content %></pre>
</div>
<% end %>
